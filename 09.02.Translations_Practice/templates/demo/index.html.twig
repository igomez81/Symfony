{% extends 'base.html.twig' %}

{% block title %}{% trans %}Hello{% endtrans %} {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{% trans %}Hello{% endtrans %} {{ controller_name }}! âœ…</h1>
    
    <h1>{% trans with {'%name%': name} %}Bienvenido %name% {% endtrans %}</h1>

    {% transchoice count %}
        {0}There are no apples.|{1} There's an apple|]1,Inf[ There are %count% apples
    {% endtranschoice %}
    <hr>

    {% trans %}This friendly message is coming from{% endtrans %}:
    <ul>
        <li>{% trans %}Your controller at {% endtrans %}<code><a href="{{ 'src/Controller/DemoController.php'|file_link(0) }}">src/Controller/DemoController.php</a></code></li>
        <li>{% trans %}Your template at {% endtrans %}<code><a href="{{ 'templates/demo/index.html.twig'|file_link(0) }}">templates/demo/index.html.twig</a></code></li>
    </ul>
</div>
{% endblock %}